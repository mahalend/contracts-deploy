{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "declarationMap": true,
    "outDir": "dist"
  },
  "include": [
    "./hardhat.config.ts",
    "./types/**/*",
    "./src/helpers/**/*"
  ],
  "exclude":[
    "./src/helpers/contract-types"
  ]
}
